            <option value="">選取一種香味分子</option>
            <option v-for="scent in data.scentData" v-bind:value="scent.name">
              {{ scent.name }}
            </option>
          </select> <i></i> </label>
      </section>
      <section class="col col-6">
        <label class="label hidden-xs">滴數</label>
        <label class="hidden-md hidden-sm hidden-lg visible-xs-* text-warning">滴數</label>
        <label class="input">
          <input type="number" value="0" min="0" name="drops[]" id="drops" class="form-control" v-model="data.item.formula[0].drops">
