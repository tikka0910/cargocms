<% LayoutUtils.addStylesheets('/assets/admin/css/smartadmin-default-index.css'); %>

<!-- client -->
<table id="main-table" class="table table-striped table-bordered table-hover" width="100%">
	<thead>
		<tr>
			<th width="10%" class="" data-hide="phone"><i class="fa fa-fw text-muted fa-hashtag hidden-sm hidden-xs"/> ID</th>
			<th width="20%" class="" data-class="expand"><i class="fa fa-fw fa-user text-muted hidden-sm hidden-xs"/> 感覺</th>
			<th width="20%" class="">香味分子名稱</th>
			<th width="20%" class=""><i class="fa fa-fw fa-envelope text-muted hidden-sm hidden-xs"/>Total Repeat</th>
			<th width="20%" class="" data-hide="phone,tablet"><i class="fa fa-fw fa-clock-o text-muted hidden-sm hidden-xs"/>Score</th>
			<th width="10%" class="" data-hide="phone,tablet"></th>
		</tr>
	</thead>
	<!-- client only -->
	<tbody>
		<tr v-for="item in data.items">
			<td>{{ item.id }}</td>
			<td><a href="/admin/#/admin/{{modelName}}/show/{{item.id}}">{{ item.title }}</a></td>
			<td>{{ item.scentName }}</td>
			<td>{{ item.totalRepeat }}</td>
			<td>{{ item.score }}</td>
			<td align="center" style="cursor: pointer;">
				<div class="row">
					<a class="btn btn-default btn-xs" role="button" v-on:click="show(item.id)">
						<i class="fa-fw fa fa-eye text-muted" />
					</a>
					<a class="btn btn-default btn-xs" role="button" v-on:click="edit(item.id)">
						<i class="fa-fw fa fa-pencil-square-o text-muted"/>
					</a>
				</div>
			</td>
		</tr>
	</tbody>
 </table>


<script type="text/javascript">
	var pagefunction = function() {

		// server only
		var columns = [
			{ "data": "id" },
			{ "data": "title" },
			{ "data": "scentName" },
			{ "data": "totalRepeat" },
			{ "data": "score" },
			{ "data": null }
		]

		// server only
		var columnDefs = [
      {
        "targets": 'no-sort',
        "orderable": false,
      },
			{
        "searchable": false,
        "targets": 0
      },
			{
        "searchable": false,
        "targets": 3
      },
			{
        "searchable": false,
        "targets": 4
      },
			{
				"targets"  : 5,
				"orderable": false,
				"searchable": false,
				"render": function ( data, type, row ) {
					var colBody =
					'<div class="row-action-buttons hidden-xs hidden-sm">'+
						'<a class="btn btn-default btn-xs" role="button" onclick="window.appMain.show('+row.id+')">'+
							'<i class="fa-fw fa fa-eye text-muted" />'+
						'</a>'+
						'<a class="btn btn-default btn-xs" role="button" onclick="window.appMain.edit('+row.id+')">'+
							'<i class="fa-fw fa fa-pencil-square-o text-muted"/>'+
						'</a>'+
					'</div>';
					return colBody;
				}
			},
		]
		var serverSidePaging = <%= (data.serverSidePaging != null)?data.serverSidePaging:false %>;
		<%- include vue.ejs %>
		appMain.$mount("#main-index");
		appMain.loadItems(appMain.renderTable);
	};
</script>
