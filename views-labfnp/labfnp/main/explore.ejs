
<!-- CSS Page Style -->
<% LayoutUtils.addStylesheets('/assets/unify/css/pages/blog_masonry_3col.css'); %>

<style type="text/css">
#recipeImageContainer{
  /*position: relative;*/
  position:relative;
  display:inline-block;
  text-align:center;
}
/*#recipeImage{
	position: absolute;
	width: 100%;
	height: 100%;

}*/
.recipeLikeContainer {
  border: 0;
  border-radius: 4px;
  -webkit-border-radius: 4px;
  -moz-border-radius: 4px;
  -webkit-box-shadow: none;
  box-shadow: none;
